<h2>My tasks</h2>
<% @tasks.each do |task|%>
<li>
<%= check_box_tag(task.title, 1, task.completed) %>
<%= link_to label_tag(task.title), task_path(task) %>
<%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</li>
<% end %>
<%= link_to "Add new task", new_task_path %>
